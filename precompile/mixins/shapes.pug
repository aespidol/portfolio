mixin circle(posX)
    - posY = Math.floor(Math.random()*(25-10 + 1) + 10)
    - position = "left:"+posX+"% !important; animation: move-and-spin "+posY+"s ease infinite;"
    .circle.shape-border(style=position)
mixin triangle(posX)
    - posY = Math.floor(Math.random()*(30-8 + 1) + 8)
    - position = "left:"+posX+"% !important; animation: move-and-spin "+posY+"s ease infinite;"
    svg(height="50" width="50" style=position)
        polygon.triangle(points="0,0 0,50 50,25")
mixin square(posX)
    - posY = Math.floor(Math.random()*(20-12 + 1) + 12)
    - position = "left:"+posX+"% !important; animation: move-and-spin "+posY+"s ease infinite;"
    .square.shape-border(style=position)