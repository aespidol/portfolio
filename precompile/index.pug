html
	head
	title Andrew Espidol
	meta(name='viewport', content='width=device-width, initial-scale=1')
	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css')
	link(rel='stylesheet', href='/client/css/main.min.css')
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js')
	script(src='/client/main.js')
	body
		//- mixins
		include ./mixins/shapes
		include ./mixins/squiggle
		nav#nav
			.nav-logo
				img.img-responsive(src="./images/logo.png")
		section#intro
			.card.float
				#content
					h2 Andrew Espidol
					p Front End Web Developer
					#para
						#highlight
						#about
							p.white-text I just want to highlight that I enjoy developing unique interactions.

			each val in [3,20,32,70,89]
				+circle(val)
			each val in [10, 37, 80]
				+triangle(val)
			each val in [-2, 15, 50, 92]
				+square(val)
			#scroller.continue.white-text.animated.fadeIn
				i.fa.fa-long-arrow-left(aria-hidden="true")
				| &nbsp Scroll

		section#work
			.container
				+squiggle("rgba(26, 188, 156,0.75)")
				h1.text-center.strong
					| Work
					br
					| And Play.
				hr
				.flex
					.row
						.eight.columns
							.work-cards.flipt
								h3 Flipt
								p Predictive Real Estate Marketing
							.overlay
								.row
									.columns.eight
										p Maintained and developed Flipt's predictive marketing platform utilizing Ruby on Rails, AngularJS and Third-Party APIs.
									.columns.four.text-center
										a.button.white-bg(href="http://www.joinflipt.com") Visit Site

						.four.columns
							.work-cards.radio
								h3 King FM
								p Local Washington Radio Station
							.overlay
								.row.text-center
									p Setup custom tracking for King FM utilizing Google Analytics API, Klipfolio and Wordpress.
					.row
						.four.columns
							.work-cards.dojo
								h3 Coding Dojo
								p Web Development Bootcamp
							.overlay
								.row.text-center
									p Learned to utilize LAMP, MEAN and Ruby On Rails over a 14 week period.
						.eight.columns
							.work-cards.cosmos
								h3 Team Launchable
								p Augmented Reality and Engagement
							.overlay
								.row
									.columns.eight
										p Built and maintained the CMS to manage the Augmented Reality Camera App. Utilized MeteorJS, ReactJS and the Vuforia API.
									.columns.four.text-center
										a.button.white-bg(href="https://madebylaunchable.com/") Visit Site

					.row
						.eight.columns
							.work-cards.battle
								h3 Git Battle
								p Fun React Project to Score Github Accounts
							.overlay
								.row
									.columns.eight
										p Built a ReactJS app to display the most popular Github repos and assign scores to Github users based on # of followers and commits.
									.columns.four
										a.button.white-bg(href="https://git-battle-66f57.firebaseapp.com/") Visit Project
		section#contact
			#contactCard
				.container
					+squiggle("#222222")
					h1 Contact
					p Currently available for contract or full-time work, and would love to hear from you
					hr
					.row
						.columns.six
							ul
								li
									i.fa.fa-phone
									| &nbsp 561-319-0727
								li
									i.fa.fa-envelope
									| &nbsp aespidol@gmail.com
								li
									i.fa.fa-map-marker
									| &nbsp Bellevue, WA
								li 
									a(href="https://www.linkedin.com/in/aespidol/")
										i.fa.fa-2x.fa-linkedin-square <span class="colored-text">&nbsp/&nbsp</span>
									a(href="https://www.facebook.com/aespidol")
										i.fa.fa-2x.fa-facebook-official <span class="colored-text">&nbsp/&nbsp</span>
									a(href="https://github.com/aespidol")
										i.fa.fa-2x.fa-github-square <span class="colored-text">&nbsp/&nbsp</span>
									a(href="https://twitter.com/ampersandrue")
										i.fa.fa-2x.fa-twitter-square
						.columns.six
							form(action="https://formspree.io/aespidol@gmail.com" method="POST")
								.input
									.label
										label
											i.fa.fa-user
									input(type="text" placeholder="Your Name" name="name")
								.input
									.label
										label
											i.fa.fa-phone
									input(type="tel" placeholder="###-###-####" name="phone")
								.input
									.label
										label
											i.fa.fa-envelope
									input(type="email" placeholder="example@email.com" name="_replyto")
								textarea(name="", cols="30", rows="10" placeholder="Your message...")
								input.white-text.black-bg(type="submit" value="Send")

